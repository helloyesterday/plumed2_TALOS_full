# vim:ft=plumed

phi:   TORSION ATOMS=5,7,9,15     NOPBC
phi2: COMBINE ARG=phi PERIODIC=NO

bf1: BF_LEGENDRE ORDER=10 MINIMUM=-pi MAXIMUM=pi
td1: TD_WELLTEMPERED BIASFACTOR=10

VES_LINEAR_EXPANSION ...
 ARG=phi2
 BASIS_FUNCTIONS=bf1
 LABEL=ves1
 TEMP=300.0
 GRID_BINS=100
 TARGET_DISTRIBUTION=td1
... VES_LINEAR_EXPANSION

# NOTE: These parameters do not reflect parameters used in real simulations! 
#       This is only for testing!
#

OPT_AVERAGED_SGD ...
  BIAS=ves1
  STRIDE=1000
  LABEL=o1
  STEPSIZE=1.0
  COEFFS_FILE=coeffs.data
  COEFFS_OUTPUT=1
  COEFFS_FMT=%12.6f
  GRADIENT_FILE=gradient.data
  GRADIENT_OUTPUT=1
  GRADIENT_FMT=%12.6f
  HESSIAN_FILE=hessian.data
  HESSIAN_OUTPUT=1
  HESSIAN_FMT=%12.6f
  FES_OUTPUT=10
  BIAS_OUTPUT=10
  TARGETDIST_STRIDE=1
  TARGETDIST_OUTPUT=10
  TARGETDIST_AVERAGES_OUTPUT=1
  TARGETDIST_AVERAGES_FMT=%12.6f
... OPT_AVERAGED_SGD

PRINT ...
  STRIDE=500
  ARG=phi,ves1.bias
  FILE=colvar.data FMT=%6.3f
... PRINT

ENDPLUMED

