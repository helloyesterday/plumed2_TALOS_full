# vim:ft=plumed

phi:   TORSION ATOMS=5,7,9,15     NOPBC
psi:   TORSION ATOMS=7,9,15,17    NOPBC

phi2: COMBINE ARG=phi PERIODIC=NO
psi2: COMBINE ARG=psi PERIODIC=NO

bf1: BF_LEGENDRE ORDER=12 MINIMUM=0.0 MAXIMUM=3.0
bf2: BF_LEGENDRE ORDER=10 MINIMUM=0.0 MAXIMUM=3.0

VES_LINEAR_EXPANSION ...
 ARG=phi2,psi2
 BASIS_FUNCTIONS=bf1,bf2
 LABEL=ves1
 TEMP=300.0
 GRID_BINS=100,120
... VES_LINEAR_EXPANSION

bf3: BF_FOURIER ORDER=4 MINIMUM=-pi MAXIMUM=+pi
VES_LINEAR_EXPANSION ...
 ARG=phi2,psi
 BASIS_FUNCTIONS=bf1,bf3
 LABEL=ves2
 TEMP=300.0
 GRID_BINS=100,120
... VES_LINEAR_EXPANSION

# NOTE: These parameters do not reflect parameters used in real simulations! 
#       This is only for testing!
#

OPT_AVERAGED_SGD ...
  BIAS=ves1
  STRIDE=1000
  LABEL=o1
  STEPSIZE=1.0
  COEFFS_FILE=coeffs.data
  COEFFS_OUTPUT=1
  COEFFS_FMT=%12.6f
  GRADIENT_FILE=gradient.data
  GRADIENT_OUTPUT=1
  GRADIENT_FMT=%12.6f
  HESSIAN_FILE=hessian.data
  HESSIAN_OUTPUT=1
  HESSIAN_FMT=%12.6f
  FES_OUTPUT=10
  FES_PROJ_OUTPUT=10
  BIAS_OUTPUT=10
  TARGETDIST_AVERAGES_FMT=%12.6f
... OPT_AVERAGED_SGD

OPT_AVERAGED_SGD ...
  BIAS=ves2
  STRIDE=1000
  LABEL=o2
  STEPSIZE=1.0
  COEFFS_FILE=coeffs2.data
  COEFFS_OUTPUT=1
  COEFFS_FMT=%12.6f
  GRADIENT_FILE=gradient2.data
  GRADIENT_OUTPUT=1
  GRADIENT_FMT=%12.6f
  HESSIAN_FILE=hessian2.data
  HESSIAN_OUTPUT=1
  HESSIAN_FMT=%12.6f
  FES_OUTPUT=10
  FES_PROJ_OUTPUT=10
  BIAS_OUTPUT=10
  TARGETDIST_AVERAGES_FMT=%12.6f
... OPT_AVERAGED_SGD

PRINT ...
  STRIDE=500
  ARG=phi2,psi2,ves1.bias,ves2.bias
  FILE=colvar.data FMT=%6.3f
... PRINT

ENDPLUMED

