# vim:ft=plumed

# Chi distribtion
# see https://en.wikipedia.org/wiki/Chi_distribution

arg1: READ FILE=arg.in VALUES=arg IGNORE_TIME

TD_CHI ...
 MINIMUM=+0.0
 SIGMA=2.0
 KAPPA=1
 LABEL=t1
... TD_CHI
#
VES_OUTPUT_TARGET_DISTRIBUTION ...
 GRID_MIN=0.0
 GRID_MAX=+10.0
 GRID_BINS=200
 TARGET_DISTRIBUTION=t1
 TARGETDIST_FILE=targetdist-1.data
 FMT_GRIDS=%11.6f
... VES_OUTPUT_TARGET_DISTRIBUTION


